{
  "name": "Larrak Dev",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "larrak-dev",
  "runServices": [
    "weaviate",
    "cem-service",
    "openfoam",
    "calculix",
    "outline-api"
  ],
  "workspaceFolder": "/workspace",
  "forwardPorts": [5001, 8080, 8765],
  "portsAttributes": {
    "5001": {
      "label": "Dashboard API",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Weaviate",
      "onAutoForward": "silent"
    },
    "8765": {
      "label": "WebSocket Telemetry",
      "onAutoForward": "silent"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "charliermarsh.ruff",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml",
        "ms-dotnettools.csharp",
        "eamodio.gitlens"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/opt/conda/envs/larrak-dev/bin/python",
        "python.analysis.extraPaths": [
          "/workspace"
        ]
      }
    }
  },
  "remoteUser": "mambauser",
  "postCreateCommand": "pip install -e . && bash scripts/setup/setup_git_auth.sh || true"
}
